% Common background
\setbeamertemplate{background}{
    \ifnum\thepage=1\relax%
      \begin{tikzpicture}
        \useasboundingbox (0,0) rectangle (\the\paperwidth,\the\paperheight);
        \fill[color=afupbluebackground] (0,0) rectangle (\the\paperwidth,\the\paperheight/4);
        \fill[color=afupblue] (1,0) rectangle (1.05, 7);
      \end{tikzpicture}

      \begin{tikzpicture}[remember picture, overlay]
        \node[anchor=south east,inner sep=0,outer sep=0, opacity=0.075] at (current page.south east) {

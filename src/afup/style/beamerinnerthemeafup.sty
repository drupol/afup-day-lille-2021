% Title page
\defbeamertemplate*{title page}{ec}[1][]
{
    \vskip2cm%

    \begin{beamercolorbox}[wd=12cm,leftskip=1cm,sep=0pt,#1]{title page header}
      \usebeamerfont{title}\inserttitle\par%
    \end{beamercolorbox}%

    \vskip0.5cm%

    \begin{beamercolorbox}[wd=12cm,leftskip=1cm,sep=0pt,#1]{subtitle page header}
      \usebeamerfont{title}\insertsubtitle\par%
    \end{beamercolorbox}%

    \vskip4cm%

    \begin{beamercolorbox}[wd=12cm,leftskip=1cm,#1]{author}
      \usebeamerfont{author}\hfill\insertauthor%
    \end{beamercolorbox}

    \vskip0.2cm%

    \begin{beamercolorbox}[wd=12cm,leftskip=1cm,#1]{date}
      \usebeamerfont{author}\hfill\insertdate%
    \end{beamercolorbox}

}

